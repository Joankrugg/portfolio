<div class="wallpaper" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/da2krghvd/image/upload/v1640972322/Portfolio/pawel-czerwinski-blue.jpg);">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-8 col-sm-10 col-xs-12 mx-auto">
        <div class="login-form card">
          <h2>CONNEXION</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, label: 'mail',
                          autofocus: true,
                          input_html: { autocomplete: "email" }%>
              <%= f.input :password, label: 'mot de passe',
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation, label: 'confirmer mot de passe',
                          input_html: { autocomplete: "new-password" } %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Valider", class: 'btn btn-flat' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/navigation' %>
